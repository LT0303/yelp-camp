<% layout('layouts/boilerplate') %>
    <h1>
        <%= campground.title %>
    </h1>
    <h2>
        <%= campground.location %>
    </h2>
    <img src="<%= campground.image %>" alt="">
    <p>
        <%= campground.description %>
    </p>
    <div>
        <a href="/campgrounds/<%= campground._id %>/edit">Edit Campground</a>
    </div>
    <div>
        <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="post">
            <button>Delete Campground</button>
        </form>
    </div>
    <footer>
        <a href="/campgrounds">Back to All Campgrounds</a>
    </footer>
    <!-- Displays the specific campground's title, location -->